@model MediaLibrary.Web.Models.ViewModel.ChangePasswordModel

@{
    ViewBag.Section = "Change account";
}

@using (Html.BeginForm())
{
    <div class="editor-folder">
        <p>
            Here you can change password to your account.
        </p>

        <div class="editor-item w300">
            <div class="editor-label">
                @Html.LabelFor(m => m.CurrentPassword)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.CurrentPassword)
                @Html.ValidationMessageFor(m => m.CurrentPassword)
            </div>
        </div>
        <div class="clear"></div>

        <div class="editor-item w300">
            <div class="editor-label">
                @Html.LabelFor(m => m.NewPassword)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>
        </div>
        <div class="clear"></div>

        <div class="editor-item w300">
            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="clear"></div>

    </div>

    <div class="buttons">
        <input type="submit" name="change" value="Change password" />
    </div>
}