@model MediaLibrary.Web.Models.ViewModel.CreateDatabaseModel

@{
    ViewBag.Section = "Create new database";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    
    <div class="editor-folder">

        <div class="editor-item w300">
            <div class="editor-label">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        <div class="clear"></div>

        <div class="editor-item wmax h500">
            <div class="editor-label">
                @Html.LabelFor(m => m.Content)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.Content)
                @Html.ValidationMessageFor(m => m.Content)
            </div>
        </div>
        <div class="clear"></div>

    </div>

    <div class="buttons">
        <input type="submit" name="change" value="Create database" />
    </div>
}
