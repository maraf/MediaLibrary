<UserControl x:Class="MediaLibrary.Views.Controls.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dd="clr-namespace:MediaLibrary.Views.DesignData"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:controls="clr-namespace:MediaLibrary.Views.Controls"
             xmlns:converters="clr-namespace:MediaLibrary.Views.Converters"
             mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="300" d:DataContext="{x:Static dd:ViewModelLocator.Library}"
             Background="White">
    <UserControl.Resources>
        <CollectionViewSource x:Key="MoviesCollectionView" Source="{Binding Movies}" />

        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="Margin" Value="8,0,8,8" />
            <Setter Property="FontSize" Value="{StaticResource NameFontSize}" />
        </Style>
        <Style TargetType="ListView">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ItemContainerStyle" Value="{StaticResource ListViewItemStyle}" />
        </Style>
        <Style x:Key="SearchImageStyle" TargetType="fa:ImageAwesome" BasedOn="{StaticResource ImageAwesome}">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0,4,12,0" />
            <Setter Property="Opacity" Value=".2" />
        </Style>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="N" Command="{Binding Create}" />
        <KeyBinding Modifiers="Ctrl" Key="S" Command="{Binding Save}" />
        <KeyBinding x:Name="kebFind" Modifiers="Ctrl" Key="F" />
    </UserControl.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Filter -->
        <Border x:Name="brdTop" Style="{StaticResource ButtonsTopStyle}" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding Name}" FontSize="{StaticResource TitleFontSize}" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0" />

                <StackPanel Orientation="Horizontal" Grid.Column="2">
                    <Button Command="{Binding Save}" Style="{StaticResource IconBarButtonStyle}" ToolTip="{controls:Localize 'Save Library to File'}">
                        <fa:ImageAwesome Icon="Save" />
                    </Button>
                    <Button Command="{Binding OpenConfiguration}" Style="{StaticResource IconBarButtonStyle}" ToolTip="{controls:Localize 'Open Library Configuration'}">
                        <fa:ImageAwesome Icon="Gears" />
                    </Button>
                </StackPanel>

                <Grid Grid.ColumnSpan="2" Grid.Row="1">
                    <TextBox x:Name="tbxFilter" KeyUp="tbxFilter_KeyUp" GotFocus="tbxFilter_GotFocus" Style="{StaticResource SearchTextBoxStyle}" />
                    <fa:ImageAwesome Icon="Search" ToolTip="{controls:Localize 'Press enter to search'}" Style="{StaticResource SearchImageStyle}" />
                </Grid>
            </Grid>
        </Border>

        <!-- ListView -->
        <ListView x:Name="lvwMovies" ItemsSource="{Binding Source={StaticResource MoviesCollectionView}}" SelectionChanged="lvwMovies_SelectionChanged" MouseDoubleClick="lvwMovies_MouseDoubleClick" Grid.Row="1">
            <ListView.InputBindings>
                <KeyBinding Key="F2" Command="{Binding Edit}" CommandParameter="{Binding SelectedItem.Key, RelativeSource={RelativeSource AncestorType=ListView, Mode=FindAncestor}}" />
                <KeyBinding Key="Delete" Command="{Binding Delete}" CommandParameter="{Binding SelectedItem.Key, RelativeSource={RelativeSource AncestorType=ListView, Mode=FindAncestor}}" />
            </ListView.InputBindings>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="8,0">
                        <TextBlock Text="{Binding Name}" FontSize="{StaticResource NameFontSize}" />
                        <TextBlock Text="{Binding Storage}" Margin="4,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Buttons -->
        <Border Style="{StaticResource ButtonsBottomStyle}" Grid.Row="2">
            <StackPanel>
                <controls:SortView x:Name="srvSorts" ViewModel="{Binding Sorts}" SelectionChanged="srvSorts_SelectionChanged" Margin="8,8,8,0" />
                <Grid>
                    <StackPanel Style="{StaticResource ButtonsLeftStyle}">
                        <Button Content="{controls:Localize 'Create New'}" Command="{Binding Create}" />
                    </StackPanel>
                    <StackPanel Style="{StaticResource ButtonsRightStyle}">
                        <StackPanel.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                                <Setter Property="Margin" Value="8,0,0,0" />
                            </Style>
                        </StackPanel.Resources>
                        <Button Content="{controls:Localize 'Edit'}" Command="{Binding Edit}" CommandParameter="{Binding SelectedItem.Key, ElementName=lvwMovies}" />
                        <Button Content="{controls:Localize 'Delete'}" Command="{Binding Delete}" CommandParameter="{Binding SelectedItem.Key, ElementName=lvwMovies}" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
