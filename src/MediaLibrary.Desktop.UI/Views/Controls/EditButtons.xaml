<UserControl x:Class="MediaLibrary.Views.Controls.EditButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:MediaLibrary.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Margin" Value="8,0,0,0" />
        </Style>
    </UserControl.Resources>
    <Border Style="{StaticResource ButtonsBottomStyle}" Grid.Row="1">
        <StackPanel Style="{StaticResource ButtonsRightStyle}">
            <Button x:Name="btnSave" Content="{controls:Localize 'Save'}" Click="btnSave_Click" IsDefault="True" />
            <Button x:Name="btnClose" Content="{controls:Localize 'Close'}" Click="btnClose_Click" />
        </StackPanel>
    </Border>
</UserControl>
